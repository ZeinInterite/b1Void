<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date Format:"
        android:labelFor="@+id/date_format_edit_text"/>

    <EditText
        android:id="@+id/date_format_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="yyyy-MM-dd HH:mm:ss"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Time Format:"
        android:labelFor="@+id/time_format_edit_text"
        android:layout_marginTop="8dp"/>

    <EditText
        android:id="@+id/time_format_edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="HH:mm:ss"/>
</LinearLayout>
